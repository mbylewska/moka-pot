{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "layout": {
            "contentSize": "1183px",
            "wideSize": "1183px"
        },
        "color": {
            "palette": [
                {
                    "slug": "moka-black",
                    "color": "#30291F",
                    "name": "black"
                },
                {
                    "slug": "moka-brown",
                    "color": "#C8A287",
                    "name": "brown"
                },
                {
                    "slug": "moka-white",
                    "color": "#FFFBF5",
                    "name": "white"
                },
                {
                    "slug": "moka-pink",
                    "color": "#CFB4AC",
                    "name": "pink"
                },
                {
                    "slug": "moka-dark-pink",
                    "color": "#C85676",
                    "name": "dark pink"
                }
                
            ]
        },
        "typography": {
            "fontFamilies": [{
                "fontFamily": "'Fraunces', serif",
                "slug": "fraunces",
                "name": "Headings-Fraunces",
                "fontFace": [{
                    "fontFamily": "'Fraunces', serif",
                    "fontWeight": "400",
                    "fontStyle": "normal",
                    "fontStretch": "normal",
                    "src": ["file:./assets/fonts/Fraunces_72pt_Soft-Regular.ttf"]
            
                }]
            },
            {
                "fontFamily": "'Roboto', sans-serif",
                "slug": "roboto",
                "name": "body-Roboto",
                "fontFace": [{
                    "fontFamily": "'Roboto', sans-serif",
                    "fontWeight": "400",
                    "fontStyle": "normal",
                    "fontStretch": "normal",
                    "src": ["file:./assets/fonts/Roboto-Regular.ttf"]
            
                }]
            }
        ],
        "fontSizes": [
            {
                "size": "0.7rem",
                "slug": "small",
                "name": "Small"
            },
            {
                "size": "1rem",
                "slug": "regular",
                "name": "Regular"
            },
            {
                "size": "1.25rem",
                "slug": "large",
                "name": "Large"
            }
        ]
        },
        "custom": {
            "typography": {
                "font-size":{
                    "h1":"clamp(2.1rem, 1.386rem + 1.905vw, 3.1rem)",
                    "h2":"clamp(1.7rem, 1.129rem + 1.524vw, 2.5rem)",
                    "h3":"clamp(1.4rem, 0.971rem + 1.143vw, 2rem)",
                    "h4":"clamp(1.3rem, 1.086rem + 0.571vw, 1.6rem)",
                    "h5":"clamp(1rem, 0.821rem + 0.476vw, 1.25rem)",
                    "h6":"clamp(0.8rem, 0.657rem + 0.381vw, 1rem)"
                }
            }
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--roboto)",
            "fontWeight": "1.5",
            "fontSize": "1rem"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--fraunces)",
                    "fontWeight": "800",
                    "lineHeight": "1.6",
                    "fontSize": "var(--wp--custom--typography--font-size--h-1)"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--fraunces)",
                    "fontWeight": "800",
                    "lineHeight": "1.4",
                    "fontSize": "var(--wp--custom--typography--font-size--h-2)"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--fraunces)",
                    "fontWeight": "800",
                    "lineHeight": "1.3",
                    "fontSize": "var(--wp--custom--typography--font-size--h-3)"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--fraunces)",
                    "fontWeight": "800",
                    "lineHeight": "1.3",
                    "fontSize": "var(--wp--custom--typography--font-size--h-4)"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--fraunces)",
                    "fontWeight": "800",
                    "lineHeight": "1.3",
                    "fontSize": "var(--wp--custom--typography--font-size--h-5)"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--fraunces)",
                    "fontWeight": "300",
                    "lineHeight": "1.3",
                    "fontSize": "var(--wp--custom--typography--font-size--h-6)"
                }
            }
        }
    }


}